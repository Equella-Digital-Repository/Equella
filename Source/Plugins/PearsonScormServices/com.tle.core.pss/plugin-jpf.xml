<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.core.pss" version="1">
	<requires>
		<import plugin-id="com.tle.core.entity.services" />
		<import plugin-id="com.tle.core.externaltools" />
		<import plugin-id="com.tle.core.guice" />
		<import plugin-id="com.tle.core.hibernate" />
		<import plugin-id="com.tle.core.migration" />
		<import plugin-id="com.tle.core.security.runasuser" />
		<import plugin-id="com.tle.core.services" />
		<import plugin-id="com.tle.core.settings" />
		<import plugin-id="com.tle.core.system" />
		<import plugin-id="com.tle.core.usermanagement.standard" />
		<import plugin-id="com.tle.core.workflow" />
		<import plugin-id="com.tle.common.externaltools" />
		<import plugin-id="com.tle.common.i18n" />
		<import plugin-id="com.tle.web.core" />
		<import plugin-id="com.tle.web.externaltools" />
		<import plugin-id="com.tle.web.lti" />
		<import plugin-id="com.tle.web.notification" />
		<import plugin-id="com.tle.web.scorm" />
		<import plugin-id="com.tle.web.sections.equella" />
		<import plugin-id="com.tle.web.viewurl" />
		<import plugin-id="com.tle.web.workflow" />
		<import plugin-id="com.pearson.pdn.icodeon:icodeon-java-sdk" />
		<import plugin-id="org.apache.httpcomponents:httpcore" />
		<import plugin-id="com.google.code.gson:gson" />
		<import plugin-id="org.jsoup:jsoup" />
		<import plugin-id="com.tle.core.notification" />
		<import plugin-id="com.tle.web.api.item.equella.serializer" />
	</requires>
	<runtime>
		<library type="code" path="classes/" id="classes">
			<export prefix="*" />
		</library>
		<library type="resources" path="resources/" id="resources" />
	</runtime>
	
	<extension plugin-id="com.tle.core.guice" point-id="module" id="guiceModule">
		<parameter id="class" value="com.tle.web.sections.equella.guice.EquellaModule" />
		<parameter id="class" value="com.tle.core.services.guice.ServicesModule" />
	</extension>
	
	<extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
		<parameter id="group" value="resource-centre" />
		<parameter id="file" value="lang/i18n.properties" />
	</extension>
	
	<extension plugin-id="com.tle.core.workflow" point-id="operation" id="enqueuePSSOperation">
		<parameter id="type" value="postSave" />
		<parameter id="class" value="bean:com.tle.core.pss.service.EnqueuePearsonScormServicesOperation" />
	</extension>
	
	<extension plugin-id="com.tle.web.core" point-id="webServlet" id="pssCallbackServlet">
		<parameter id="bean" value="bean:com.tle.core.pss.servlet.PearsonScormServicesCallbackServlet" />
		<parameter id="url-pattern" value="/pss/callback" />
	</extension>
	
	<extension plugin-id="com.tle.core.migration" point-id="migration" id="createPSSSchema">
		<parameter id="id" value="com.tle.core.pss.migration.CreatePearsonScormServicesEntities" />
		<parameter id="bean" value="bean:com.tle.core.pss.migration.CreatePearsonScormServicesEntities" />
		<parameter id="date" value="2014-11-25" />
	</extension>
	
	<extension plugin-id="com.tle.core.migration" point-id="initialSchema" id="echoSchemaObjects">
		<parameter id="class" value="com.tle.core.pss.entity.PssCallbackLog" />
	</extension>

	<extension plugin-id="com.tle.core.services" point-id="applicationEventListener" id="listeners">
		<parameter id="listenerClass" value="com.tle.core.events.listeners.ItemDeletedListener" />
	</extension>
	
	<extension plugin-id="com.tle.core.hibernate" point-id="domainObjects" id="pssObjects">
		<parameter id="class" value="com.tle.core.pss.entity.PssCallbackLog" />
	</extension>
	
	<extension plugin-id="com.tle.core.notification" point-id="notificationExtension" id="badPssNotifications">
		<parameter id="type" value="badpss" />
		<parameter id="bean" value="bean:com.tle.core.pss.notification.PearsonScormServicesNotification" />
	</extension>
	
	<extension plugin-id="com.tle.web.api.item.equella.serializer" point-id="attachmentListener" id="scormAttachmentListener">
		<parameter id="bean" value="bean:com.tle.core.pss.operation.ScormAttachmentListener" />
	</extension>
	
</plugin>
