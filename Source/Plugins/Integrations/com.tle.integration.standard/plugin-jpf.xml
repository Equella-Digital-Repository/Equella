<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.integration.standard" version="1">
	<requires>
		<import plugin-id="com.tle.common.activation" />
		<import plugin-id="com.tle.common.i18n" />
		<import plugin-id="com.tle.core.guice" />
		<import plugin-id="com.tle.web.freemarker" />
		<import plugin-id="com.tle.web.integration" />
		<import plugin-id="com.tle.web.sections" />
		<import plugin-id="com.tle.web.sections.equella" />
		<import plugin-id="com.tle.web.sections.standard" />
		<import plugin-id="com.tle.web.selection" />
		<import plugin-id="com.tle.web.viewurl" />
		<import plugin-id="com.tle.web.institution" />
	</requires>
	<runtime>
		<library type="code" path="classes/" id="core">
			<export prefix="*" />
		</library>
		<library type="resources" path="resources/" id="resources" />
	</runtime>

	<extension plugin-id="com.tle.core.guice" point-id="module" id="guiceModules">
		<parameter id="class" value="com.tle.web.sections.equella.guice.EquellaModule" />
		<parameter id="class" value="com.tle.integration.standard.guice.StandardIntegrationModule" />
	</extension>

	<extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
		<parameter id="group" value="resource-centre" />
		<parameter id="file" value="lang/i18n-institution.properties" />
	</extension>

	<extension plugin-id="com.tle.web.institution" point-id="integrationDownloadSection" id="moodledownload">
		<parameter id="class" value="bean:com.tle.integration.standard.moodle.MoodleIntegDownloadSection" />
		<parameter id="order" value="3000" />
	</extension>

	<extension plugin-id="com.tle.web.institution" point-id="integrationDownloadSection" id="integpackdownload">
		<parameter id="class" value="bean:com.tle.integration.standard.IntegrationPackDownload" />
		<parameter id="order" value="6000" />
	</extension>

	<extension plugin-id="com.tle.web.institution" point-id="integrationDownloadSection" id="activecachedownload">
		<parameter id="class" value="bean:com.tle.integration.standard.ActiveCacheToolDownload" />
		<parameter id="order" value="7000" />
	</extension>
	
	<extension plugin-id="com.tle.web.institution" point-id="integrationDownloadSection" id="htmlpluginsdownload">
		<parameter id="class" value="bean:com.tle.integration.standard.HTMLPluginsDownload" />
		<parameter id="order" value="10000" />
	</extension>
</plugin>
