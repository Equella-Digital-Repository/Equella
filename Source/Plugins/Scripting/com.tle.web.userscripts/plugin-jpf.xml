<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.web.userscripts" version="1">
	<requires>
		<import plugin-id="com.tle.common.i18n" />
		<import plugin-id="com.tle.core.guice" />
		<import plugin-id="com.tle.web.sections" />
		<import plugin-id="com.tle.web.sections.equella" />
		<import plugin-id="com.tle.core.security" />
		<import plugin-id="com.tle.web.entities" />
		<import plugin-id="com.tle.web.settings" />
		<import plugin-id="com.tle.core.userscripts" />
		<import plugin-id="org.mozilla:rhino" />
		<import plugin-id="commons-lang:commons-lang" />
	</requires>
	<runtime>
		<library type="code" path="classes/" id="core">
			<export prefix="*" />
		</library>
		<library type="resources" path="resources/" id="resources" />
	</runtime>

	<extension plugin-id="com.tle.core.guice" point-id="module" id="guiceModules">
		<parameter id="class" value="com.tle.core.services.guice.ServicesModule" />
		<parameter id="class" value="com.tle.web.sections.equella.guice.EquellaModule" />
		<parameter id="class" value="com.tle.web.userscripts.service.UserScriptsModule" />
	</extension>

	<extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
		<parameter id="file" value="lang/i18n.properties" />
		<parameter id="group" value="resource-centre" />
	</extension>
	
	<extension plugin-id="com.tle.core.security" point-id="privilegeTreeProviders" id="userScriptsPrivilegeTreeProvider">
		<parameter id="provider" value="bean:com.tle.web.userscripts.privileges.UserScriptsPrivilegeTreeProvider" />
	</extension>

	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="userScriptsSection">
		<parameter id="path" value="/access/userscripts.do" />
		<parameter id="root" value="bean:userScriptsTree" />
	</extension>

	<extension plugin-id="com.tle.web.settings" point-id="settingsExtension" id="userScriptsSettingSection">
		<parameter id="class" value="bean:com.tle.web.userscripts.section.UserScriptsSettingsSection" />
		<parameter id="grouping" value="externalsettings" />
	</extension>
</plugin>
