<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.web.api.payment.backend" version="1">
	<requires>
		<import plugin-id="com.tle.common.dynacollection" />
		<import plugin-id="com.tle.common.i18n" />
		<import plugin-id="com.tle.common.item" />
		<import plugin-id="com.tle.common.search" />
		<import plugin-id="com.tle.core.dynacollection" />
		<import plugin-id="com.tle.core.item" />
		<import plugin-id="com.tle.core.payment.backend" />
		<import plugin-id="com.tle.core.freetext" />
		<import plugin-id="com.tle.core.guice" />
		<import plugin-id="com.tle.core.oauth" />
		<import plugin-id="com.tle.core.payment.beans" />
		<import plugin-id="com.tle.core.mimetypes" />
		<import plugin-id="com.tle.core.settings" />
		<import plugin-id="com.tle.web.api.item.equella" />
		<import plugin-id="com.tle.web.api.oauth.interfaces" />
		<import plugin-id="com.tle.web.api.search" />
		<import plugin-id="com.tle.web.core" />
		<import plugin-id="com.tle.web.remoting.rest" />
		<import plugin-id="com.tle.web.resources" />
		<import plugin-id="com.tle.web.viewurl" />
		<import plugin-id="commons-lang:commons-lang" />
		<import plugin-id="org.codehaus.jackson" />
		<import plugin-id="org.jboss.resteasy:jaxrs-api" exported="true" />
		<import plugin-id="com.tle.web.api.item.interfaces" />
		<import plugin-id="com.tle.web.api.item.equella.serializer" />
		<import plugin-id="com.tle.web.api.item.equella.interfaces" />
		<import plugin-id="com.tle.common.interfaces.equella" />
		<import plugin-id="com.tle.web.api.baseentity.serializer" />
	</requires>

	<runtime>
		<library type="code" path="classes/" id="core">
			<export prefix="*" />
		</library>
		<library type="resources" path="resources/" id="resources" />
	</runtime>

	<extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
		<parameter id="file" value="lang/i18n.properties" />
		<parameter id="group" value="resource-centre" />
	</extension>

	<extension plugin-id="com.tle.core.guice" point-id="module" id="guiceModule" />

	<extension plugin-id="com.tle.web.core" point-id="threadLocal" id="storefrontThreadLocal">
		<parameter id="id" value="" />
		<parameter id="bean" value="bean:com.tle.web.api.payment.store.filter.ClearStoreApi" />
	</extension>

	<extension plugin-id="com.tle.web.core" point-id="webFilter" id="storeapiFilter">
		<parameter id="url-pattern" value="/api/store" />
		<parameter id="url-pattern" value="/api/store/*" />
		<parameter id="exclude" value="/api/store/[*]/help/[*]" />
		<parameter id="exclude" value="/api/store/icon/large.jpg" />
		<parameter id="exclude" value="/api/store/icon/small.jpg" />
		<parameter id="exclude" value="/api/store/test" />
		<parameter id="exclude" value="/api/store/catalogue/[cat]/item/[item]/thumbnail/[attachment]" />
		<parameter id="exclude" value="/api/store/catalogue/[cat]/item/[item]/attachment/[attachment]" />
		<parameter id="bean" value="bean:com.tle.web.api.payment.store.filter.StoreApiFilter" />
		<parameter id="order" value="1000" />
	</extension>

	<!-- <extension plugin-id="com.tle.web.remoting.rest" point-id="resource" id="storeFrontResource"> <parameter id="class" 
		value="com.tle.web.api.payment.StoreFrontResource" /> </extension> -->

	<extension plugin-id="com.tle.web.remoting.rest" point-id="resource" id="storeResource">
		<parameter id="class" value="com.tle.web.api.payment.store.resource.StoreResource" />
	</extension>

	<extension plugin-id="com.tle.web.remoting.rest" point-id="resource" id="storeCatalogueResource">
		<parameter id="class" value="com.tle.web.api.payment.store.resource.StoreCatalogueResource" />
	</extension>

	<extension plugin-id="com.tle.web.remoting.rest" point-id="resource" id="storeTransactionResource">
		<parameter id="class" value="com.tle.web.api.payment.store.resource.StoreTransactionResource" />
	</extension>

	<extension plugin-id="com.tle.web.remoting.rest" point-id="resource" id="storeCheckoutResource">
		<parameter id="class" value="com.tle.web.api.payment.store.resource.StoreCheckoutResource" />
	</extension>

	<extension plugin-id="com.tle.web.remoting.rest" point-id="resource" id="storeHarvestResource">
		<parameter id="class" value="com.tle.web.api.payment.store.resource.StoreHarvestResource" />
	</extension>
</plugin>
