<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.core.payment.backend.pay.paypal" version="1">
	<requires>
		<import plugin-id="com.tle.core.payment.backend" />
		<import plugin-id="com.tle.common.i18n" />
		<import plugin-id="com.tle.core.guice" />
		<import plugin-id="com.tle.core.entity.services" />
		<import plugin-id="com.tle.web.core" />
		<import plugin-id="com.paypal.sdk:paypal-base" />
	</requires>

	<runtime>
		<library type="code" path="classes/" id="core">
			<export prefix="*" />
		</library>
		<library type="resources" path="resources/" id="resources" />
	</runtime>

	<extension plugin-id="com.tle.core.guice" point-id="module" id="guiceModules">
		<parameter id="class" value="com.tle.core.services.guice.ServicesModule" />
	</extension>

	<extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
		<parameter id="file" value="lang/i18n.properties" />
		<parameter id="group" value="resource-centre" />
	</extension>

	<extension plugin-id="com.tle.core.payment.backend" point-id="paymentGatewayImplementation" id="paypal">
		<parameter id="type" value="paypal" />
		<parameter id="class" value="bean:com.tle.core.payment.paypal.PaypalGatewayService" />
	</extension>

	<extension plugin-id="com.tle.core.payment.backend" point-id="paymentGatewayType" id="paypalGateway">
		<parameter id="id" value="paypal" />
		<parameter id="nameKey" value="com.tle.core.payment.backend.pay.paypal.gateway.name" />
		<parameter id="descriptionKey" value="com.tle.core.payment.backend.pay.paypal.gateway.description" />
	</extension>

	<extension plugin-id="com.tle.web.core" point-id="webServlet" id="paypalNotificationServlet">
		<parameter id="bean" value="bean:com.tle.core.payment.paypal.servlet.PaypalNotificationServlet" />
		<parameter id="url-pattern" value="/paypal-notification/*" />
	</extension>
</plugin>
