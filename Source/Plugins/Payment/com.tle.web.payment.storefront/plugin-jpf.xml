<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.web.payment.storefront" version="1">
	<requires>
		<import plugin-id="com.tle.core.payment.storefront" />
		<import plugin-id="com.tle.web.entities" />
		<import plugin-id="com.tle.web.sections" />
		<import plugin-id="com.tle.web.sections.equella" />
		<import plugin-id="com.tle.web.settings" />
		<import plugin-id="com.tle.core.security" />
		<import plugin-id="com.tle.core.entity.services" />
		<import plugin-id="com.tle.core.payment.beans" />
		<import plugin-id="com.tle.core.guice" />
		<import plugin-id="com.tle.core.settings" />
		<import plugin-id="com.tle.common.i18n" />
		<import plugin-id="org.codehaus.jackson" />
		<import plugin-id="com.tle.web.recipientselector" />
		<import plugin-id="com.tle.common.recipientselector" />
		<import plugin-id="org.apache.httpcomponents:httpclient" />
		<import plugin-id="com.tle.web.search" />
		<import plugin-id="com.tle.web.viewitem" />
		<import plugin-id="com.tle.web.viewitem.summary" />
		<import plugin-id="com.tle.web.itemadmin" />
		<import plugin-id="com.tle.web.itemlist" />
		<import plugin-id="com.tle.web.htmleditor" />
		<import plugin-id="com.tle.mycontent" />
		<import plugin-id="com.tle.web.myresources" />
		<import plugin-id="com.tle.core.scheduler" />
		<import plugin-id="com.tle.core.notification" />
		<import plugin-id="com.tle.web.notification" />
		<import plugin-id="com.tle.web.workflow" />
		<import plugin-id="net.sf.json-lib:json-lib" />
	</requires>

	<runtime>
		<library type="code" path="classes/" id="core">
			<export prefix="*" />
		</library>
		<library type="resources" path="resources/" id="resources" />
	</runtime>

	<extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
		<parameter id="group" value="resource-centre" />
		<parameter id="file" value="lang/i18n.properties" />
	</extension>

	<extension plugin-id="com.tle.core.guice" point-id="module" id="guiceModules">
		<parameter id="class" value="com.tle.core.services.guice.ServicesModule" />
		<parameter id="class" value="com.tle.web.sections.equella.guice.EquellaModule" />
		<parameter id="class" value="com.tle.web.payment.storefront.guice.StoreFrontModule" />
		<parameter id="class" value="com.tle.web.payment.shop.guice.ShopModule" />
		<parameter id="class" value="com.tle.web.payment.shop.guice.ShopSearchModule" />
	</extension>

	<extension plugin-id="com.tle.web.sections.equella" point-id="menuContributor" id="shopMenuContributor">
		<parameter id="menuContributorClass" value="bean:com.tle.web.payment.shop.menu.ShopMenuContributor" />
		<parameter id="enabledFor" value="loggedIn" />
	</extension>

	<extension plugin-id="com.tle.web.settings" point-id="settingsGroupingExtension" id="storefrontsettings">
		<parameter id="nameKey" value="com.tle.web.payment.storefront.grouping.storefrontsettings.name" />
	</extension>

	<extension plugin-id="com.tle.web.settings" point-id="settingsExtension" id="storeSettingSection">
		<parameter id="class" value="bean:com.tle.web.payment.storefront.section.store.StoreRegisterSettingsLinkSection" />
		<parameter id="grouping" value="storefrontsettings" />
	</extension>

	<extension plugin-id="com.tle.web.settings" point-id="settingsExtension" id="storefrontSettingsLink">
		<parameter id="class" value="bean:com.tle.web.payment.storefront.section.settings.StoreFrontSettingsLinkSection" />
		<parameter id="grouping" value="storefrontsettings" />
	</extension>

	<!-- Shop -->
	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="shopStoresSection">
		<parameter id="path" value="/access/shop/shop.do" />
		<parameter id="root" value="bean:shopStoresTree" />
	</extension>

	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="shopStoreSection">
		<parameter id="path" value="/access/shop/store.do" />
		<parameter id="root" value="bean:shopStoreTree" />
	</extension>

	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="shopSearchSection">
		<parameter id="path" value="/access/shop/search.do" />
		<parameter id="root" value="bean:shopSearchTree" />
	</extension>

	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="shopViewItemTree">
		<parameter id="path" value="/access/shop/viewitem.do" />
		<parameter id="root" value="bean:shopViewItemTree" />
	</extension>

	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="shopCartTree">
		<parameter id="path" value="/access/shop/cart.do" />
		<parameter id="root" value="bean:shopCartTree" />
	</extension>

	<!-- Settings etc -->
	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="registerStoreSection">
		<parameter id="path" value="/access/registerstore.do" />
		<parameter id="root" value="bean:registerStoreTree" />
	</extension>

	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="storefrontSettings">
		<parameter id="path" value="/access/storefrontsettings.do" />
		<parameter id="root" value="bean:/access/storefrontsettings" />
	</extension>

	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="storeEditSection">
		<parameter id="path" value="/access/store.do" />
		<parameter id="root" value="bean:storeTree" />
	</extension>

	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="approvals">
		<parameter id="path" value="/access/approvals.do" />
		<parameter id="root" value="bean:/access/approvals" />
	</extension>

	<extension plugin-id="com.tle.web.settings" point-id="settingsExtension" id="approvalsLink">
		<parameter id="class" value="bean:com.tle.web.payment.storefront.section.workflow.ApprovalsLinkSection" />
		<parameter id="grouping" value="storefrontsettings" />
	</extension>

	<!-- My Resources -->
	<extension plugin-id="com.tle.web.myresources" point-id="subsearch" id="purchasedSearch">
		<parameter id="bean" value="bean:com.tle.web.payment.storefront.section.PurchasedSubSearch" />
	</extension>

	<!-- Item Summary -->
	<extension plugin-id="com.tle.web.viewitem.summary" point-id="summaryTabExtension" id="purchasedItemSummarySection">
		<parameter id="id" value="purchasedItemSummarySection" />
		<parameter id="class" value="bean:com.tle.web.payment.storefront.section.viewitem.PurchasedItemSummarySection" />
	</extension>

	<!-- Manage resources filters -->
	<extension plugin-id="com.tle.web.sections" point-id="section" id="filterByPurchasedSection">
		<parameter id="path" value="/access/itemadmin.do" />
		<parameter id="class" value="bean:com.tle.web.payment.storefront.section.itemadmin.FilterByPurchasedSection" />
		<parameter id="parentid" value="SEARCH_RESULTS_ACTIONS" />
		<parameter id="afterid" value="com.tle.web.itemadmin.section.ItemAdminFilterByItemStatusSection" />
	</extension>

	<extension plugin-id="com.tle.web.sections" point-id="section" id="filterBySubscriptionEndSection">
		<parameter id="path" value="/access/itemadmin.do" />
		<parameter id="class" value="bean:com.tle.web.payment.storefront.section.itemadmin.FilterBySubscriptionEndSection" />
		<parameter id="parentid" value="SEARCH_RESULTS_ACTIONS" />
		<parameter id="afterid" value="com.tle.web.itemadmin.section.ItemAdminFilterByItemStatusSection" />
	</extension>

	<!-- ItemAdmin re-subscribe button -->
	<extension plugin-id="com.tle.web.itemlist" point-id="itemListExtension" id="resubscribe">
		<parameter id="bean" value="bean:com.tle.web.payment.storefront.section.itemadmin.ResubscribeButton" />
		<parameter id="applies" value="itemadmin" />
		<parameter id="applies" value="purchasedsubsearch" />
	</extension>

	<extension plugin-id="com.tle.core.notification" point-id="notificationExtension" id="purchasedItemUpdatedNotifications">
		<parameter id="type" value="piupdate" />
		<parameter id="bean" value="bean:com.tle.web.payment.notification.PurchasedItemUpdatedNotifications" />
	</extension>

	<extension plugin-id="com.tle.core.notification" point-id="notificationExtension" id="approvalNotifications">
		<parameter id="type" value="apprvodr" />
		<parameter id="bean" value="bean:com.tle.web.payment.shop.notifications.ApprovalOrPaymentNotifications" />
	</extension>

	<extension plugin-id="com.tle.core.notification" point-id="notificationExtension" id="paymentNotifications">
		<parameter id="type" value="payorder" />
		<parameter id="bean" value="bean:com.tle.web.payment.shop.notifications.ApprovalOrPaymentNotifications" />
	</extension>

</plugin>
