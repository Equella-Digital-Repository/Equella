<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.web.payment.backend.pay.paypal" version="1">
	<requires>
		<import plugin-id="com.tle.common.i18n" />
		<import plugin-id="com.tle.web.payment.backend" />
		<import plugin-id="com.tle.core.payment.backend" />
		<import plugin-id="com.tle.core.payment.backend.pay.paypal" />
		<import plugin-id="com.tle.web.sections" />
		<import plugin-id="com.tle.web.entities" />
		<import plugin-id="com.tle.core.guice" />
		<import plugin-id="com.tle.web.sections.equella" />
		<import plugin-id="com.tle.core.entity.services" />
		<import plugin-id="com.tle.web.sections.standard" />


	</requires>

	<runtime>
		<library type="code" path="classes/" id="core">
			<export prefix="*" />
		</library>
		<library type="resources" path="resources/" id="resources" />
	</runtime>

	<extension plugin-id="com.tle.core.guice" point-id="module" id="guiceModules">
		<parameter id="class" value="com.tle.web.sections.equella.guice.EquellaModule" />
		<parameter id="class" value="com.tle.web.payment.paypal.guice.PaypalModule" />
	</extension>

	<extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
		<parameter id="file" value="lang/i18n.properties" />
		<parameter id="group" value="resource-centre" />
	</extension>

	<extension plugin-id="com.tle.web.payment.backend" point-id="paymentGatewayEditor" id="paypalEditor">
		<parameter id="id" value="paypal" />
		<parameter id="class" value="bean:com.tle.web.payment.paypal.PaypalGatewayEditor" />
	</extension>

	<extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="checkoutSection">
		<parameter id="path" value="/paypal/checkout.do" />
		<parameter id="root" value="bean:checkoutSection" />
	</extension>

	<extension plugin-id="com.tle.core.payment.backend" point-id="paymentGatewayCheckoutInfo" id="paypalCheckout">
		<parameter id="type" value="paypal" />
		<parameter id="class" value="bean:com.tle.web.payment.paypal.PaypalCheckoutInfoExtension" />
	</extension>
</plugin>
