<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.core.payment.backend.pay.fake" version="1">
	<requires>
		<import plugin-id="com.tle.core.payment.backend" />
		<import plugin-id="com.tle.common.i18n" />
		<import plugin-id="com.tle.core.guice" />
		<import plugin-id="com.tle.core.entity.services" />
		<import plugin-id="com.tle.web.core" />
	</requires>

	<runtime>
		<library type="code" path="classes/" id="core">
			<export prefix="*" />
		</library>
		<library type="resources" path="resources/" id="resources" />
	</runtime>

	<extension plugin-id="com.tle.core.guice" point-id="module" id="guiceModules">
		<parameter id="class" value="com.tle.core.services.guice.ServicesModule" />
	</extension>

	<extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
		<parameter id="file" value="lang/i18n.properties" />
		<parameter id="group" value="resource-centre" />
	</extension>

	<extension plugin-id="com.tle.core.payment.backend" point-id="paymentGatewayImplementation" id="fake">
		<parameter id="type" value="fake" />
		<parameter id="class" value="bean:com.tle.core.payment.fake.FakeGatewayService" />
	</extension>

	<extension plugin-id="com.tle.core.payment.backend" point-id="paymentGatewayType" id="fakeGateway">
		<parameter id="id" value="fake" />
		<parameter id="nameKey" value="com.tle.core.payment.backend.pay.fake.gateway.name" />
		<parameter id="descriptionKey" value="com.tle.core.payment.backend.pay.fake.gateway.description" />
	</extension>
</plugin>
