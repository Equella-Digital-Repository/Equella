<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.admin.usermanagement.leap" version="1">
	<attributes>
		<attribute id="type" value="admin-console" />
	</attributes>

	<requires>
		<import plugin-id="com.tle.admin.tools" />
		<import plugin-id="com.tle.admin.usermanagement.tool" />
		<import plugin-id="com.tle.common.usermanagement.leap" exported="true" />

		<import plugin-id="com.tle.common.i18n" />
	</requires>

	<runtime>
		<library type="code" path="classes/" id="core" />
		<library type="resources" path="resources/" id="resources" />
	</runtime>

	<extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
		<parameter id="group" value="admin-console" />
		<parameter id="file" value="lang/i18n.properties" />
	</extension>

	<extension plugin-id="com.tle.admin.usermanagement.tool" point-id="configUI" id="leapUI">
		<parameter id="displayorder" value="1000" />
		<parameter id="settingsClass" value="com.tle.beans.usermanagement.leap.wrapper.LeapUserWrapperSettings" />
		<parameter id="class" value="com.tle.admin.usermanagement.leap.LeapUserPlugin" />
		<parameter id="width" value="600" />
		<parameter id="height" value="450" />
		<parameter id="name" value="com.tle.admin.usermanagement.leap.title" />
	</extension>
</plugin>
