<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.core.services" version="1">
	<requires>
		<import plugin-id="com.tle.common.beans" exported="true" />
		<import plugin-id="com.tle.common.i18n" />
		<import plugin-id="com.tle.common.security" />
		<import plugin-id="com.tle.common.usermanagement" exported="true" />
		<import plugin-id="com.tle.core.application" />
		<import plugin-id="com.tle.core.config" />
		<import plugin-id="com.tle.core.guice" />
		<import plugin-id="com.tle.core.zookeeper" />
		<import plugin-id="com.tle.web.core.equella" />
		<import plugin-id="commons-beanutils:commons-beanutils" />
		<import plugin-id="org.apache.httpcomponents:httpclient" />
		<import plugin-id="org.apache.httpcomponents:httpcore" />
		<import plugin-id="org.hurl:hurl" />
	</requires>

	<runtime>
		<library type="code" path="classes/" id="core">
			<export prefix="*" />
		</library>
	</runtime>

	<extension-point id="eventExecutor">
		<parameter-def id="bean" type="string" multiplicity="one" />
	</extension-point>

	<extension-point id="applicationEventListener">
		<parameter-def id="listener" type="string" multiplicity="none-or-one" />
		<parameter-def id="listenerClass" type="string" multiplicity="one-or-more" />
	</extension-point>

	<extension-point id="clusterMessageHandler">
		<parameter-def id="bean" type="string" multiplicity="one" />
	</extension-point>
	
	<extension-point id="coreTasks">
		<parameter-def id="id" type="string" multiplicity="one" />
		<parameter-def id="dependency" type="string" multiplicity="any" />
		<parameter-def id="essential" type="boolean" multiplicity="none-or-one" default-value="false" />
	</extension-point>

	<extension plugin-id="com.tle.core.guice" point-id="module" id="guiceModules">
		<parameter id="class" value="com.tle.core.services.guice.CoreServicesModule" />
	</extension>
	
	<extension plugin-id="com.tle.core.application" point-id="onStartup" id="registerMessaging">
		<parameter id="bean" value="bean:com.tle.core.services.ClusterMessagingService" />
		<parameter id="type" value="initial" />
		<parameter id="order" value="200" />
	</extension>

	<extension plugin-id="com.tle.core.guice" point-id="beanChecker" id="eventListenerBeanChecker">
		<parameter id="class" value="com.tle.core.services.guice.EventListenerBeanChecker" />
	</extension>

	<extension plugin-id="com.tle.core.services" point-id="clusterMessageHandler" id="eventMessageHandler">
		<parameter id="bean" value="bean:com.tle.core.services.EventService" />
	</extension>

	<extension plugin-id="com.tle.core.services" point-id="clusterMessageHandler" id="taskMessageHandler">
		<parameter id="bean" value="bean:com.tle.core.services.TaskService" />
	</extension>
</plugin>
