<?xml version="1.0" encoding="UTF-8"?>

<project name="server-common" basedir=".">

	<dirname property="server-common.basedir" file="${ant.file.server-common}"/>
	<import file="../common-ant.xml" />

	<fileset id="plugin.manifests" dir="${source.base}">
		<include name="Source/Server/*/plugin-jpf.xml"/>
		<include name="Source/Plugins/${External Dependencies.resource}/*.jar"/>
	</fileset>

	<target name="define-build.classpath" depends="init,define-eclipseClasspath">
		<path id="build.classpath">
			<path refid="eclipse.classpath" />
		</path>
	</target>

	<target name="clean" depends="common-ant.clean" />

	<target name="generate-source" depends="common-ant.generate-source" />

	<target name="init" depends="common-ant.init" />
	
	<target name="compile" depends="common-ant.compile" if="src.enabled"/>

	<target name="make" depends="common-ant.make" />

	<target name="product" depends="test" />

</project>
