<?xml version="1.0" encoding="UTF-8"?>
<project name="Java Sample REST Client" default="product" basedir=".">

	<property name="src" location="src" />
	<property name="public" location="public_html" />
	<property name="lib" location="${public}/WEB-INF/lib" />
	<property name="build" location="${public}/WEB-INF/classes" />

	<property name="war.name" value="restclient.war" />
	<property name="war.dest" location="war" />

	<target name="clean">
		<delete dir="${build}" />
		<delete dir="${war.dest}" />
	</target>

	<target name="init" depends="clean">
		<mkdir dir="${build}" />
		<mkdir dir="${war.dest}" />
	</target>

	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${build}" source="1.7" target="1.7" debug="on" includeantruntime="false">
			<classpath>
				<fileset dir="${lib}" />
			</classpath>
		</javac>
	</target>

	<target name="product" depends="compile">
		<war destfile="${war.dest}/${war.name}" webxml="${public}/WEB-INF/web.xml" basedir="${public}" />
	</target>
</project>
